<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="a4everstudent.braintrainer.MainActivity"
    android:layout_marginRight="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:id="@+id/timeLeftTextView"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:background="@android:color/holo_orange_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textSize="14sp" />


    <TextView
        android:text="X/Y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/correctTotalAnswersView"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="@android:color/holo_blue_bright"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="2ยบ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/secondChoiceButton"
            android:background="@android:color/holo_green_light"
            android:textSize="40sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_column="1"
            android:layout_row="0"
            android:tag="1"
            android:onClick="chooseAnswer"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

        <Button
            android:text="3ยบ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/thirdChoiceButton"
            android:background="@color/colorAccent"
            android:textSize="40sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_column="0"
            android:layout_row="1"
            android:tag="2"
            android:onClick="chooseAnswer"
            android:textStyle="normal|bold"
            android:textAlignment="center" />



        <Button
            android:text="4ยบ "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fourthChoiceButton"
            android:textSize="40sp"
            android:background="@android:color/holo_blue_bright"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_column="1"
            android:layout_row="1"
            android:tag="3"
            android:onClick="chooseAnswer"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

        <Button
            android:text="1ยบ "
            android:id="@+id/firstChoiceButton"
            android:textSize="40sp"
            android:background="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_column="0"
            android:layout_row="0"
            android:tag="0"
            android:onClick="chooseAnswer"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

    </GridLayout>

    <TextView
        android:text="Question here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/questionView"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Correct/Wrong "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="74dp"
        android:id="@+id/feedbackTextView"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
